{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name" : "client",
            "image" : "c4fu/multi-client",
            "hostname" : "client",
            "essential" : false
        },
        {
            "name" : "server",
            "image": "c4fu/multi-server",
            "hostname" : "api",
            "essential" : false
        },
        {
            "name" : "worker",
            "image" : "c4fu/multi-worker",
            "hostname" : "worker",
            "essential" : false
        },
        {
            "name": "nginx",
            "image" : "c4fu/multi-nginx",
            "hostname" : "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links" : ["client","server"]

        }
    ]
}